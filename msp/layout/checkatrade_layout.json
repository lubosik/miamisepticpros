{
  "layout_version": "1.0",
  "reference_url": "https://www.checkatrade.com/blog/cost-guides/new-boiler-cost/",
  "sections": [
    "hero_image",
    "h1_title",
    "lede_deck",
    "summary_box",
    "table_of_contents",
    "cost_overview",
    "symptoms_causes",
    "how_to_steps",
    "prevention_maintenance",
    "faq",
    "related_services",
    "cta_final"
  ],
  "images": {
    "hero": {
      "placement": "top",
      "aspect_ratio": "16:9",
      "min_dimensions": "1200x630",
      "format": "webp",
      "path_pattern": "/public/images/septic/{slug}/hero.webp"
    },
    "inline": {
      "placement": "mid-article",
      "max_count": 1,
      "format": "webp"
    }
  },
  "content_rules": {
    "short_paragraphs": true,
    "max_paragraph_lines": 4,
    "bullets_ok": true,
    "numbered_steps": true,
    "generous_spacing": true,
    "no_cramped_blocks": true,
    "no_giant_tables": true,
    "reading_width": "max-w-4xl"
  },
  "forbidden": [
    "hashtags",
    "asterisks",
    "long_dashes_sequences",
    "clamped_words",
    "duplicate_headings",
    "repeated_words"
  ],
  "summary_box": {
    "style": "light_blue_accent",
    "border_left": true,
    "padding": "generous",
    "bullet_count": "3-5",
    "content_types": ["when_to_call", "timeframe", "risk_notes", "key_facts"]
  },
  "cost_overview": {
    "style": "green_cards",
    "layout": "three_column_grid",
    "cards": ["minimum", "average", "maximum"],
    "include_methodology": true
  },
  "table_of_contents": {
    "style": "styled_navigation",
    "anchor_links": true,
    "visual_hierarchy": true,
    "hover_states": true
  },
  "heading_hierarchy": {
    "h1": "once_only",
    "h2": "main_sections",
    "h3": "subsections",
    "spacing": "generous_between"
  }
}

